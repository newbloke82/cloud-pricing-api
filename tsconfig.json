{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "lib": ["esnext"],
    "target": "es2022",
    "module": "commonjs",
    "moduleResolution":"node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./types", "./node_modules/@types"
    ]
  },
  "compileOnSave": true,
  "include": [
    "src/**/*", "types/**/*",
  ]
}
